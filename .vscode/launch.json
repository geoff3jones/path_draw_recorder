    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\main.py",
            "args": [
                "--seed",
                "1000000",
                "--outfile",
                "output\\test",
                "--outtype",
                "parquet",
                "-i",
                "1",
                "-n",
                "50"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: bspline",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}\\src\\bspline.py",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: ellipse",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}\\src\\ellipse.py",
            "args": [],
            "console": "integratedTerminal"
        },{
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}